    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "BASE_URL": "http://localhost:5000",
                "FLASK_APP": "app/app.py",
                "FLASK_DEBUG": "1",
                "MONGODB_URI": "mongodb://localhost:27017/url_shortener"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}